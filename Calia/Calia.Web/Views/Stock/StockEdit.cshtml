@model StockMaterialDto

<div class="container">
    <div class="d-flex justify-content-center mt-4">
        <div class="card" style="width: 100%; max-width: 600px;">
            <div class="card-header">
                <h6 class="card-title mb-0 text-center">Stok Düzenle</h6>
            </div>

            <div class="card-body">
                <form method="post">
                    <!-- Stock ID (hidden field) -->
                    <input asp-for="MaterialId" type="hidden" />

                    <div class="row gy-3">
                        <!-- Material Name input -->
                        <div class="col-12">
                            <label class="control-label" style="font-size: 20px; color: #343a40;">Malzeme Adı</label>
                            <input asp-for="MaterialName" class="form-control" placeholder="Malzeme Adı" />
                            <span asp-validation-for="MaterialName" class="text-danger"></span>
                        </div>

                        <!-- Total Amount input -->
                        <div class="col-12">
                            <label class="control-label" style="font-size: 20px; color: #343a40;">Toplam Miktar</label>
                            <input asp-for="MaterialAmount" class="form-control" placeholder="Toplam Miktar" />
                            <span asp-validation-for="MaterialAmount" class="text-danger"></span>
                        </div>

                        <!-- Action buttons -->
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>

                        <div class="col-12 text-center mt-2">
                            <a asp-controller="Stock" asp-action="StockIndex" class="btn btn-outline-secondary">Listeye Dön</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
