@model KisiselGiderVm

@{
    ViewData["Title"] = "Gider Ekle";
}

<!-- Form yapısı -->
<div class="container">
    <div class="d-flex justify-content-center mt-4">
        <div class="card" style="width: 100%; max-width: 600px;">
            <!-- Max width ile büyük ekranları optimize ettik -->
            <div class="card-header">
                <h6 class="card-title mb-0 text-center">Gider Bilgileri</h6>
            </div>
            <div class="card-body">
                <form asp-action="CreateGider" method="post" class="needs-validation" novalidate>
                    <div class="row gy-3">
                        <div class="col-12">
                            <label asp-for="AdminId" class="control-label" style="font-size: 18px; color: #343a40;">Admin Seç</label>
                            <select asp-for="AdminId" class="form-control" asp-items="Model.Admins" required>
                                <option value="">Admin Seç</option>
                            </select>
                            <div class="invalid-feedback">Lütfen bir admin seçin.</div>
                        </div>

                        <div class="col-12">
                            <label asp-for="CashAmount" class="control-label" style="font-size: 18px; color: #343a40;">Miktar</label>
                            <input asp-for="CashAmount" class="form-control" required />
                            <div class="invalid-feedback">Lütfen bir miktar giriniz.</div>
                        </div>

                        <div class="col-12">
                            <label for="Reason" class="form-label" style="font-size: 18px; color: #343a40;">Sebep</label>
                            <textarea id="Reason" name="Reason" class="form-control" rows="4" cols="50" placeholder="Sebep gir..." required></textarea>
                            <div class="invalid-feedback">
                                Lütfen alana sebep giriniz.
                            </div>
                        </div>

                        <div class="col-12 text-center mt-3">
                            <button type="submit" class="btn btn-success w-100">Kaydet</button> <!-- Düğme genişliği ekranda esnek olacak şekilde -->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Bootstrap'ın istemci tarafında doğrulama desteği
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
