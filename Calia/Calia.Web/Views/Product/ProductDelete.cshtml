@model ProductDto

<form asp-action="ProductDelete" method="post">
    <div class="container">
        <div class="d-flex justify-content-center mt-4">
            <div class="card" style="width: 100%; max-width: 600px;">
                <div class="card-header">
                    <h6 class="card-title mb-0 text-center">Delete Product</h6>
                </div>
                <div class="card-body">
                    <input asp-for="ProductId" type="hidden" />
                    <div class="row gy-3">
                        <div class="col-12">
                            <label asp-for="Name" class="control-label" style="font-size: 20px; color: #343a40;">Name</label>
                            <input asp-for="Name" disabled class="form-control" />
                        </div>

                        <div class="col-12">
                            <label asp-for="Price" class="control-label" style="font-size: 20px; color: #343a40;">Price</label>
                            <input asp-for="Price" disabled class="form-control" />
                        </div>

                        <div class="text-center mt-3">
                            <a asp-action="ProductIndex" class="btn btn-outline-secondary">Back to List</a>
                            <input type="submit" value="Delete" class="btn btn-danger ms-2" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
