@model CategoryDto

<form asp-action="CategoryEdit">
    <div class="container">
        <div class="d-flex justify-content-center mt-4">
            <div class="card" style="width: 100%; max-width: 600px;">
                <div class="card-header">
                    <h6 class="card-title mb-0 text-center">Edit Category</h6>
                </div>
                <div class="card-body">
                    <input asp-for="Id" hidden />
                    <div class="row gy-3">
                        <div class="col-12">
                            <label asp-for="Name" class="control-label" style="font-size: 20px; color: #343a40;">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="DisplayOrder" class="control-label" style="font-size: 20px; color: #343a40;">Display Order</label>
                            <input asp-for="DisplayOrder" class="form-control" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>

                        <div class="col-12 form-switch switch-warning d-flex align-items-center gap-3 mb-3">
                            <input asp-for="ProductCount" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label fw-medium text-secondary" for="flexSwitchCheckDefault">Ürün sayısı var mı?</label>
                        </div>

                        <div class="text-center mt-3">
                            <a asp-action="CategoryIndex" class="btn btn-outline-secondary">Back to List</a>
                            <input type="submit" value="Edit" class="btn btn-success ms-2" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
