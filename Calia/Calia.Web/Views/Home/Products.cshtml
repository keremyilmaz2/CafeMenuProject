@model List<ProductDto>

<div class="container">
    <h2 class="text-center my-4">Category Products</h2>
    <div class="row">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var product in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="p-0 my-3 border rounded">
                        <div class="card">
                            <h3 class="card-title text-dark-50 text-center py-2">@product.Name</h3>
                            <div class="card-body">
                                <p><strong>Price:</strong> $@product.Price</p>
                                <div class="row">
                                    <div class="col">
                                        <a asp-controller="Home" asp-action="ProductDetails" asp-route-productId="@product.ProductId" class="btn btn-primary form-control">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">No products found for this category.</p>
        }
    </div>
</div>
