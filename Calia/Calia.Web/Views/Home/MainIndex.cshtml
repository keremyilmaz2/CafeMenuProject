@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutCalia.cshtml";  // Burada layout'u belirtiyoruz
}
<link rel="stylesheet" href="~/css/media.css">
<style>
    .contacts_form {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

        .contacts_form .row {
            display: flex;
            gap: 10px;
        }

        .contacts_form .col {
            flex: 1;
        }

        .contacts_form .field {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
        }

        .contacts_form textarea {
            min-height: 100px;
        }

        .contacts_form .btn-full-width {
            width: 100%;
            background-color: #a67c52;
            color: white;
            padding: 15px;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .contacts_form .btn-full-width:hover {
                background-color: #8c6239;
            }

    .modal {
        display: flex; /* Flex kullanarak ortalayacağız */
        position: fixed;
        z-index: 1000; /* Diğer elemanların üstünde görünmesi için */
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto; /* İçeriğin taşmasını önler */
        background-color: rgba(0, 0, 0, 0.5); /* Yarı saydam arka plan */
    }

    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%; /* Modal genişliği */
        max-width: 500px; /* Maksimum genişlik */
    }

    .close {
        color: #aaa;
        float: right; /* Sağ köşeye yerleştirir */
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

</style>

<section class="hero">
    <div class="hero_media">
    </div>
    <div class="container">
        <div class="hero_main">
            <div class="section_header">
                <h1 class="section_header-title" data-aos="fade-up">Callia Hoşgeldiniz.</h1>

            </div>
        </div>

        <div class="mobile-only" style="margin-top: -69px;   width: 115%;    margin-left: -26px;">
            <source media="(max-width: 768px)" srcset="img/index/callia.jpg">
            <img src="img/index/callia.jpg" alt="Callia Coffee Bandırma">
        </div>


        <div class="hero_slider swiper">
            <div class=swiper-wrapper>
                <div class=swiper-slide>
                    <picture>
                        <img src=img/index/callia.jpg alt="Callia Coffee Bandırma">
                    </picture>
                </div>

            </div>
            <div class="hero_slider-nav swiper-overlay-nav swiper-nav"><a class="swiper-button-prev nav-item" href=#><i class=icon-chevron-left></i> </a><a class="swiper-button-next nav-item" href=#><i class=icon-chevron-right></i></a></div>
        </div>
    </div>
</section>
<div class="banner"></div>
<section class="menu section--nopb">
    <div class="container">
        <div class="section_header centered">
            <h2 style="margin-top: -42px;" class="fiyat section_header-title" data-aos="fade-up" data-aos-delay="50">Menü Fiyat Listesi</h2>
            <p class="section_header-text" data-aos="fade-up" data-aos-delay="100"></p>
        </div>
        <div class="menu_wrapper mobil-menu" style="margin-top: -10px;">
            <div class="menu_tabs tab-content" id="menuTabs">
                <a asp-controller="Home" asp-action="Menu">
                    <div class="col-md-12">
                        <img class="lazy" data-src="img/menu/menu-01.jpg" src="img/menu/menu-01.jpg" alt="Callia Coffee Bandırma">
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<section class="booking section">
    <div class="container" style="margin-top: -32px;">
        <div class="section_header centered">
            <span class="section_header-subtitle" data-aos="fade-up">İLETİŞİME GEÇ</span>
            <h2 class="section_header-title" data-aos="fade-up" data-aos-delay="50">EKİBİMİZE KATIL</h2>
        </div>
    </div>
    <div class="contacts section" style="margin-top: -84px;">
        <div class="container">
            <form class="contacts_form" id="contacts_form" asp-action="SendBasvuruEmail" method="post">
                <div class="row">
                    <div class="col">
                        <input class="field required" type="text" name="AdSoyad" id="AdSoyad"
                               placeholder="Ad Soyad" required />
                    </div>
                    <div class="col">
                        <input class="field required" type="tel" name="Telefon" id="Telefon"
                               placeholder="Telefon" required />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <input class="field required" type="email" name="Email" id="Email"
                               placeholder="E-Posta" required />
                    </div>
                </div>
                <textarea class="field required" name="Husus" id="Husus"
                          placeholder="Belirtmek istediğiniz diğer hususlar." required></textarea>

                <button class="btn btn-full-width" type="submit">GÖNDER</button>

                <div id="successMessage"
                     style="display: none; background-color: #87CEEB; color: #ffffff;
                    padding: 10px; border-radius: 5px; text-align: center;">
                    Mesajınız başarıyla gönderildi. Teşekkür ederiz!
                </div>
            </form>
        </div>
    </div>

</section>


<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d639.2913066658864!2d27.945680591650092!3d40.3423663750505!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14b5d33f014d6fa1%3A0x8228f8c6398a2c72!2sCallia!5e0!3m2!1str!2str!4v1713834540626!5m2!1str!2str" width="100%" height="50%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>




<!-- The Modal -->
<!-- The Modal -->
<div id="infoModal" class="modal" style="display: none;">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <h3 class="section_header-title">Hoş Geldiniz!</h3>
        <p>Bu kafede online sipariş sistemi kullanılmaktadır, bilgi almak için linke tıklayınız.</p>
        <button class="menu-button text-right" onclick="window.location.href='https://calliacoffee.com/menu'" style="display: flex; justify-content: center; align-items: center;">
            <div style="position: relative; width: 100%; height: auto; display: flex; justify-content: center;">
                <img src="~/images/justkeylogo2.jpeg" alt="JustKey" style="max-width: 17%; height: auto; position: absolute; right: 1px; bottom: -15px;">
                <!-- Logo sağ alt köşede konumlandırıldı -->
            </div>
        </button>
    </div>
</div>




@section Scripts {
    <script src="~/js/index.js"></script>
    <script>
        window.onload = function () {
            // localStorage'da 'modalShown' anahtarını kontrol et
            if (!localStorage.getItem('modalShown')) {
                document.getElementById('infoModal').style.display = 'flex'; // Sayfa yüklendiğinde modal'i aç
                localStorage.setItem('modalShown', 'true'); // Modal'ın açıldığını kaydet
            }
        };

        function closeModal() {
            document.getElementById('infoModal').style.display = 'none'; // Modal'i kapat
        }
    </script>
}
